<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/titleimage2"

    tools:context=".TitleScreen">


    <ImageView
        android:id="@+id/Title"
        android:layout_width="338dp"
        android:layout_height="67dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="209dp"
        android:background="@drawable/preview"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.728"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.213"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/subTitle"
        android:layout_width="339dp"
        android:layout_height="66dp"
        android:layout_alignTop="@+id/Title"
        android:layout_alignEnd="@+id/Title"
        android:layout_alignRight="@+id/Title"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="31dp"
        android:layout_marginRight="-5dp"
        android:background="@drawable/war"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.728"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.213"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/start"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="269dp"
        app:srcCompat="@drawable/finalbutton2" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/option"
        android:layout_alignStart="@+id/start"
        android:layout_alignLeft="@+id/start"
        android:layout_alignTop="@+id/start"
        android:layout_alignEnd="@+id/start"
        android:layout_alignRight="@+id/start"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/aldrich"
        android:text="       Start"
        android:textColor="#000" />

    <ImageButton
        android:id="@+id/option"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="206dp"
        app:srcCompat="@drawable/finalbutton2" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/option"
        android:layout_alignLeft="@+id/option"
        android:layout_alignEnd="@+id/option"
        android:layout_alignRight="@+id/option"
        android:layout_alignBottom="@+id/option"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="21dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="27dp"
        android:fontFamily="@font/aldrich"
        android:text="     Options"
        android:textColor="#000" />


</RelativeLayout>