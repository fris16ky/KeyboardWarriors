<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backdrop"
    tools:context=".GameScreen">

    <ImageButton
        android:id="@+id/back"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024"
        app:srcCompat="@drawable/finalbutton2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/back"
        android:layout_alignStart="@+id/start"
        android:layout_alignLeft="@+id/start"
        android:layout_alignTop="@+id/start"
        android:layout_alignEnd="@+id/start"
        android:layout_alignRight="@+id/back"
        android:fontFamily="@font/aldrich"
        android:text="       Back"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="@+id/back"
        app:layout_constraintEnd_toEndOf="@+id/back"
        app:layout_constraintHorizontal_bias="0.636"
        app:layout_constraintStart_toStartOf="@+id/back"
        app:layout_constraintTop_toTopOf="@+id/back"
        app:layout_constraintVertical_bias="0.416"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/easy"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="141dp"
        android:layout_height="66dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.425"
        app:srcCompat="@drawable/easy"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/easy"
        android:layout_alignStart="@+id/easy"
        android:layout_alignLeft="@+id/easy"
        android:layout_alignTop="@+id/easy"
        android:layout_alignEnd="@+id/easy"
        android:layout_alignRight="@+id/back"
        android:fontFamily="@font/aldrich"
        android:text="         Easy"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="@+id/easy"
        app:layout_constraintEnd_toEndOf="@+id/easy"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="@+id/easy"
        app:layout_constraintTop_toTopOf="@+id/easy"
        app:layout_constraintVertical_bias="0.444"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/hard"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="143dp"
        android:layout_height="67dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.671"
        app:srcCompat="@drawable/hard"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/hard"
        android:layout_alignRight="@+id/back"
        android:fontFamily="@font/aldrich"
        android:text="       Hard"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="@+id/hard"
        app:layout_constraintEnd_toEndOf="@+id/hard"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="@+id/hard"
        app:layout_constraintTop_toTopOf="@+id/hard"
        app:layout_constraintVertical_bias="0.458"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/tutorial"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.204"
        app:srcCompat="@drawable/tutorial"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tutorial"
        android:layout_alignRight="@+id/back"
        android:fontFamily="@font/aldrich"
        android:text="     Tutorial"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="@+id/tutorial"
        app:layout_constraintEnd_toEndOf="@+id/tutorial"
        app:layout_constraintHorizontal_bias="0.636"
        app:layout_constraintStart_toStartOf="@+id/tutorial"
        app:layout_constraintTop_toTopOf="@+id/tutorial"
        app:layout_constraintVertical_bias="0.456"
        tools:ignore="MissingConstraints" />


    <ImageButton
        android:id="@+id/medium"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/medium"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="362dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tutorial"
        android:layout_alignRight="@+id/back"
        android:fontFamily="@font/aldrich"
        android:text="     Medium"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="@+id/medium"
        app:layout_constraintEnd_toEndOf="@+id/medium"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="@+id/medium"
        app:layout_constraintTop_toTopOf="@+id/medium"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>